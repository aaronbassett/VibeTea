# VibeTea Server Environment Variables

# HTTP server port
PORT=8080

# Monitor Public Keys
# Format: source1:base64_pubkey1,source2:base64_pubkey2
# Required unless VIBETEA_UNSAFE_NO_AUTH=true
VIBETEA_PUBLIC_KEYS=monitor1:BASE64_ED25519_PUBLIC_KEY

# Authentication token for subscriber clients
# Required unless VIBETEA_UNSAFE_NO_AUTH=true
VIBETEA_SUBSCRIBER_TOKEN=your-secret-token-here

# Supabase Configuration (required for client authentication)
# Get these from your Supabase project settings
VIBETEA_SUPABASE_URL=https://your-project.supabase.co
VIBETEA_SUPABASE_ANON_KEY=your-anon-key-here

# Development mode: disable all authentication
# WARNING: Only use in development!
# VIBETEA_UNSAFE_NO_AUTH=true
